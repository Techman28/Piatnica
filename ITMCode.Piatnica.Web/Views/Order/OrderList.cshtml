
@{
    ViewData["Title"] = "OrderList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="text-center">
    <h1 class="display-4">Lista aktualnycvh zleceń</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col"><a class="btn btn-success text-white">Dodaj zlecenie</a></th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < 10; i++)
            {
            <tr>
                <th scope="col"><a class="btn btn-primary text-white">Szczegóły</a></th>
                <td>Mark</td>
                <td>Otto</td>
                <td></td>
            </tr>
            }
           
        </tbody>
    </table>



</div>