@{
    ViewData["Title"] = "AddCommision";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wizard-container">
    <div class="card card-wizard" data-color="green" id="wizardProfile">
        <form action="" method="">
            <!--        You can switch " data-color="primary" "  with one of the next bright colors: "green", "orange", "red", "blue"       -->
            <div class="card-header text-center">
                <h3 class="card-title">
                    Piatnica
                </h3>
            </div>
            <div class="wizard-navigation">
                <ul class="nav nav-pills">
                    <li class="nav-item ">
                        <a class="nav-link active" href="#about" data-toggle="tab" role="tab">
                            Lista zamówienień
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#account" data-toggle="tab" role="tab">
                            Wybór pracownika i pojazdu
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="#address" data-toggle="tab" role="tab">
                            Podsumowanie
                        </a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="about">
                        <h5 class="info-text"> Lista zamówień </h5>
                        <div class="row justify-content-center">
                            <div class="col-md-12">
                                <table id="datatables" class="table table-striped table-no-bordered table-hover"> </table>

                            </div>


                        </div>
                    </div>
                    <div class="tab-pane" id="account">
                        <h5 class="info-text"> Wybór pracownika i pojazdu </h5>
                        <div class="row justify-content-center">
                            <div class="col-lg-10">
                                <div class="row">
                                    <div class="col-lg-5 col-md-6 col-sm-3">
                                        <h4> Wybierz kierowcę </h4>
                                        <select class="selectpicker" data-style="btn darkgreen btn-round" title="Single Select">
                                            <option disabled selected>Wybierz kierowcę</option>
                                            <option value="2">Adam Kowalczyk</option>
                                            <option value="3">Jakub Karpiński</option>
                                            <option value="4">Mateusz Kosmyk</option>
                                            <option value="5">Kamil Grabas</option>
                                            <option value="6">Adam Prawicki</option>
                                        </select>
                                        <h4> Wybierz pojazd </h4>
                                        <select class="selectpicker" data-style="btn darkgreen btn-round" title="Single Select">
                                            <option disabled selected>Wybierz kierowcę</option>
                                            <option value="2">Iveco</option>
                                            <option value="3">MAN</option>
                                            <option value="4">Volvo</option>
                                            <option value="5">SCANIA</option>
                                            <option value="6">Fiat</option>
                                        </select>

                                    </div>

                                    <div class="col-lg-5 col-md-6 col-sm-3" id="check">
                                        <div class="form-group">
                                            <label for="exampleFormControlTextarea1" id="label-comment">Uwagi</label>
                                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="address">
                        <div class="row justify-content-center">
                            <div class="col-lg-8">
                                <h5 class="info-text"> PODSUMOWANIE </h5>

                                <table id="summary-table" class="table table-striped table-no-bordered table-hover" width="100%" style="width:100%"> </table>

                            </div>
                            <div class="col-lg-4">
                                <div class="row justify-content-center">


                                    <div class="col-lg-12">
                                        <h5 class="info-text"> DANE PRACOWNIKA I POJAZDU </h5>
                                    </div>
                                </div>

                                <div class="row justify-content-center">
                                    <div class="col-lg-6 mt-5">

                                        <p> Imię: Mateusz</p>
                                        <p> Nazwisko: Kosmyk</p>
                                        <p> Prawo Jazdy: C + b</p>
                                    </div>
                                    <div class="col-lg-6 mt-5">
                                        <p> Marka pojazdu: Iveco</p>
                                        <p> Nr rejestracyjny: Tk 07JF</p>
                                        <p> Aktualny przebieg: 250 235</p>
                                        <p> Ładowność: 20 </p>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="mr-auto">
                            <input type="button" class="btn btn-previous darkblue btn-fill  " name="previous" value="Wstecz">
                        </div>
                        <div class="ml-auto">
                            <input type="button" class="btn btn-next darkblue btn-fill  " name="next" value="Dalej">
                            <input type="button" class="btn btn-finish darkblue btn-fill  " id="finish-order" name="finish" value="Zakończ" style="display: none;">
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section scripts{
<script>
    $(document).ready(function () {
        // Initialise the wizard
        demo.initMaterialWizard();
        setTimeout(function () {
            $('.card.card-wizard').addClass('active');
        }, 600);
    });</script>
<script src="~/dashboard/assets/js/plugins/jquery.dataTables.min.js"></script>
<script src="~/js/AddCommision.js"></script>


}

